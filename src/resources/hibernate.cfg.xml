<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <!--<property key="hibernate.id.new_generator_mappings">false</property>-->
        <property name="show_sql">true</property>
        <mapping class="com.gamenet.domain.Data" />
        <mapping class="com.gamenet.domain.Profile" />

        <mapping class="com.gamenet.domain.UserRole" />
        <mapping class="com.gamenet.domain.User" />
        <mapping class="com.gamenet.domain.Role" />
        <mapping class="com.gamenet.domain.FriendInvite" />
    </session-factory>
</hibernate-configuration>